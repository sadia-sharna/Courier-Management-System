@model Courier_Management_System.Models.RegistrationViewModel
@{
                /**/

                ViewBag.Title = "Login";
}


<div class="panel panel-body" style="margin-top:60px">
    <div class="col-md-3">
        <div class="panel panel-default">
            <div class="thumbnail">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h1 class="panel-title">Login</h1>
                    </div>
                    <div class="img-">
                        <img src="~/Content/Images/Login1.png" alt="..." style="margin-top:2px">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <form id="LoginForm">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.emailid, new { @class = "form-control", @placeholder = "Emailid" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Password" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <a href="#" class="btn btn-primary" onclick="LoginUser()">Submit</a>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    var LoginUser = function () {
        var data = $("#LoginForm").serialize();
        $.ajax({
            type: "Post",
            url: "/usersite/LoginUser",
            data: data,
            success: function (response) {
                if (response == "Fail") {
                    window.location.href = "/usersite/Login";
                }
                else if (response == "User") {
                    window.location.href = "/usersite/IndexView";

                }
                else if (response == "Admin") {
                    window.location.href = "/Booking/AdminHome";

                }
            }


        })
    }
</script>

